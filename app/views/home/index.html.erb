<h1>My Blog </h1>
<p>Welcome to My Blog!</p>


<ul>
    <%- for article in @articles do %>
    <li>
      
       <strong><%= link_to article.title, read_path(article_id: article.id), article.title %></strong>
       <p><%= article.description %></p>
       <small>
         Oleh <%= article.user.full_name %>
         pada <%= article.created_at.to_s(:short) %>
       </small>

    </li>  
    <%- end %>
</ul>

